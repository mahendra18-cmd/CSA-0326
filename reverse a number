#include<stdio.h>
int main(){
    int num,rev=0,reminder;
    printf("Enter a number: ");
    scanf("%d", &num);
    while(num !=0){
        reminder=num%10;
        rev=rev * 10 + reminder;
        num=num/10;
        
    }
    
    printf("Reversed Number:%d\n",rev);
    
    return 0;
    

    
}





output:



Enter a number: 104
Reversed Number:401
